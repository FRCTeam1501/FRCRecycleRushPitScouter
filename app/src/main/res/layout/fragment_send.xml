<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blue"
                style="?android:listSeparatorTextViewStyle"/>

            <Button android:id="@+id/blueSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blue_send" />

            <Button android:id="@+id/jsonSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/json_send" />
            <EditText android:id="@+id/jsonCompetitionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoCorrect"
                android:hint="@string/json_comp"
                />

            <Button android:id="@+id/jsonLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/json_load" />
            <EditText android:id="@+id/jsonLoadString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/json_string"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt"
                style="?android:listSeparatorTextViewStyle"/>

            <Button android:id="@+id/txtSendOneTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_one_team" />
            <EditText android:id="@+id/txtTeam1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_1"/>
            <Button android:id="@+id/txtSendAllTeams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_all_teams" />

            <Button android:id="@+id/txtSendMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_match" />
            <EditText android:id="@+id/txtMatchNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_match_num"/>
            <EditText android:id="@+id/txtMatchTeam1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_1"/>
            <EditText android:id="@+id/txtMatchTeam2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_2"/>
            <EditText android:id="@+id/txtMatchTeam3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_3"/>
            <EditText android:id="@+id/txtMatchTeam4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_4"/>
            <EditText android:id="@+id/txtMatchTeam5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_5"/>
            <EditText android:id="@+id/txtMatchTeam6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/txt_team_6"/>





        </LinearLayout>
        </LinearLayout>
    </ScrollView>
